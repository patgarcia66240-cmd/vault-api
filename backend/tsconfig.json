{
    "compilerOptions": {
        "target": "ES2020",
        "module": "node20",
        "moduleResolution": "node16",
        "strict": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "outDir": "dist",
        "rootDir": "src",
        "skipLibCheck": true,
        "sourceMap": true,
        "inlineSources": true,
        "ignoreDeprecations": "5.0"
    },
    "include": [
        "src/**/*"
    ]
}
